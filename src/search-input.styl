@import input-mixin
@import utils

/*
Inputs - Single Line Text

Applying ".*-text-input" to text-based form input elements such as "text", "search", or
"email" input element adds base styling.

.large-text-input - larger-sized elements that match the height of a ".large-button".

<input type="search" class="dark-text-input {{modifier}}" value="" placeholder="Text input goes here">
<input type="search" class="light-text-input {{modifier}}" value="" placeholder="Text input goes here">

*/

.search-input
	input-base()
	border var-border
	background-color var-background-color
	box-shadow var-box-shadow--down
	color var-color
	-webkit-appearance: none;
	padding: 0 0 0 2.7em;
	border-radius: 30px;
	background-image: var-background-img
	background-position: 1em center;
	background-repeat: no-repeat;

.search-input:focus
	background-color var-background-color--focus
	color var-color-focus

input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration
	margin-right 5px

.search-input:focus::-webkit-input-placeholder,
.search-input:focus::-webkit-input-placeholder
	color var-placeholder-color--input


/*
 TopCoat Large Text Input
 ------------------------

TopCoat large text input control

:disabled - Disabled state
.is-disabled - Simulates a disabled state on mobile devices

    <input type="search" class="topcoat-text-input--large" value="" placeholder="Text input goes here">
    <input type="search" class="topcoat-text-input--large is-disabled" value="" placeholder="Text input goes here">
*/

.search-input--large
	@extend .topcoat-search-input
	height var-height--large
	font-size var-font-size--large
	font-weight var-font-weight
	padding-left 2.8em
	border-radius 40px
	background-position 1.2em center

.search-input--large:focus
	@extend .topcoat-search-input:focus

@import topcoat-media-search-input

.disabled
	disabled()